module highlight (
	input  logic		clk,
	input  logic		reset,

	input  logic		Grayscale_empty,
	input  logic [7:0]  grayscale_in,
	input  logic		frame_empty,
	input  logic [23:0] init_fram,
	input  logic		out_full,

	output logic		Grayscale_RE,
	output logic		frame_re,
	output logic		dout_we,
	output logic [23:0] dout
);

typedef enum logic [1:0] {s0, s1} state_t;
state_t state, state_c;

logic [23:0] hl, hl_c;

localparam HIGHLIGHT = 24'h0000ff;

always_ff @ (posedge clk, posedge reset)
begin
	if (reset == 1'b1) begin
		state <= s0;
		hl <= 'h0;
	end else begin
		state <= state_c;
		hl <= hl_c;
	end
end

always_comb
begin
	Grayscale_RE = 'b0;
	frame_re  = 'b0;

	dout_we    = 1'b0;
	dout   = 'h0;

	state_c   = state;
	hl_c      = hl;

	case (state)
		s0:
		begin
			if ( (!Grayscale_empty) && (!frame_empty) )
			begin
				hl_c = grayscale_in == 8'hff ? HIGHLIGHT : init_fram; 

				Grayscale_RE = 'b1;
				frame_re  = 'b1;

				state_c = s1;
			end
		end

		s1: 
		begin
			if (out_full == 1'b0)
			begin
				dout = hl;
				dout_we = 'b1;

				state_c = s0;
			end
		end

		default:
		begin
			Grayscale_RE = 'b0;
			frame_re  = 'b0;
			dout_we    = 'b0;
			dout   = 'h0;
			state_c   = s0;
			hl_c      = 'hx;
		end

	endcase
end

endmodule
